@{
    ViewBag.Title = "RegisterStudent";
    string message = ViewBag.message;
    Student registredStudent = ViewBag.Data;

}
@using System.Configuration
@using UniversityManagementApp.Models;
@model Student

@section Styles {
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <style type="text/css">
        #date {
            cursor: not-allowed;
        }
    </style>
}
<div class="card shadow p-1 text-white  bg-dark col-md-10 mx-auto rounded">
    @*Every title of Page will shown using following Div*@
    <div class="card-header text-center bg-light text-primary">
        <h2> Register Student</h2>
    </div>

    @*User will input all kind off data using this section*@
    <br />
    <div class="mt-1 col-md-12 text-xl-right">
        <a class="btn  btn-outline-info" href="#" role="button">Show </a>
    </div>
    <div class="card-body">
        @if (message != null)
        {
            if (message.Contains("Successful"))
            {
                <div class="alert alert-success text-center" role="alert">
                    <i class="fa fa-check-circle" aria-hidden="true"></i> @message
                </div>
            }
            else
            {
                <div class="alert alert-danger text-center" role="alert">
                    <i class="fa fa-times" aria-hidden="true"></i> @message
                </div>
            }


        }
        @using (Html.BeginForm())
        {
            @*Name field*@
            <div class="input-group mx-auto col-md-5">
                <div class="input-group-prepend">
                    <label for="Name" class="input-group-text">Name &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                </div>
                @Html.TextBoxFor(x => x.Name, null, new {@class = "form-control"})
                @Html.ValidationMessageFor(x => x.Name, null, new {@class = "error", @id = "Name-error"})
            </div>

               @*Email field*@
            <div class="input-group mt-2 mx-auto col-md-5">
                <div class="input-group-prepend">
                    <label for="Email" class="input-group-text">Email&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                </div>
                @Html.TextBoxFor(x => x.Email, null, new {@class = "form-control"})
                @Html.ValidationMessageFor(x => x.Email, null, new {@class = "error", @id = "Email-error"})

            </div>

               @*Contact field*@
            <div class="input-group mt-2 mx-auto col-md-5">
                <div class="input-group-prepend">
                    <label for="Contact" class="input-group-text">Contact No</label>
                </div>
                @Html.TextBoxFor(x => x.Contact, null, new {@class = "form-control"})
                @Html.ValidationMessageFor(x => x.Contact, null, new {@class = "error", @id = "Contact-error"})
            </div>

             @*Date Picker field*@
            <div class="input-group mt-2 mx-auto col-md-5">
                <div class="input-group-prepend">
                    <label for="Date" class="input-group-text">Date &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                </div>
                @Html.TextBoxFor(x => x.Date, new {@class = "form-control", @placeholder = "YYYY-MM-DD", @readonly = "true"})
                @Html.ValidationMessageFor(x => x.Date, null, new {@class = "error", @id = "Date-error"})
            </div>




            @*Address field*@
            <div class="input-group mt-2 mx-auto col-md-5">
                <div class="input-group-prepend">
                    <label for="Address" class="input-group-text">Address&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                </div>
                @Html.TextAreaFor(x => x.Address, new {@class = "form-control"})
                @Html.ValidationMessageFor(x => x.Address, null, new {@class = "error", @id = "Address-error"})
            </div>


            @*Department list*@
            <div class="input-group mt-2 mx-auto col-md-5">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="DepartmentCode">Department</label>
                </div>

                @Html.DropDownListFor(x => x.DepartmentCode, new SelectList(ViewBag.Departments, "value", "text"), new {@class = "form-control"})
                @Html.ValidationMessageFor(x => x.DepartmentCode, null, new {@class = "error", @id = "DepartmentCode-error"})
            </div>

            <div class="mt-2 mx-auto col-md-5 text-xl-right">
                <input class="btn btn-primary mt-2 mr-2" type="submit" value="Register">
            </div>
        }

    </div>



    @if (registredStudent != null)
    {
        <h4 class="col-md-8 mx-auto text-center"> Student's Registration Information here:</h4>
        <table class="table mx-auto col-md-8 bg-light border-info text-dark">
           <caption class="text-center text "><h3>Registration No: @registredStudent.RegNo</h3>  </caption>
            <tr>
                <td>Name</td>
                <td>: @registredStudent.Name</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>: @registredStudent.Email</td>
            </tr>
            <tr>
                <td>Contact</td>
                <td>: @registredStudent.Contact</td>
            </tr>
            <tr>
                <td>Address</td>
                <td>: @registredStudent.Address</td>
            </tr>
            <tr>
                <td>Department</td>
                <td>: @registredStudent.DepartmentCode</td>
            </tr>
            <tr>
                <td>Date</td>
                <td>: @registredStudent.Date</td>
            </tr>
        </table>
    }




















</div>
@section scripts
{
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript">
 
    $(function () {
        $("#Date").datepicker({
            dateFormat: "yy-mm-dd",
            changeMonth: true,
            changeYear: true
        });
        $("#Date").datepicker("setDate", new Date());
    });
</script>


    
}



